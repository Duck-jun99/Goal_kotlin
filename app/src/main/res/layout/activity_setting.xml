<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".mainSrcreen.CompleteGoal"
    android:id="@+id/test_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?attr/actionBarSize"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="112dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/line_bold2"
                android:fontFamily="@font/cafe24dongdong"
                android:gravity="center"
                android:text="설정"
                android:textColor="@color/black"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_QA"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/line_bold2"
                    android:drawableRight="@drawable/ic_twotone_help_24"
                    android:paddingRight="30dp"
                    android:text="도움말"
                    android:textSize="25dp"
                    android:fontFamily="@font/cafe24dongdong"/>

                <Button
                    android:id="@+id/btn_statistics"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:drawableRight="@drawable/ic_twotone_align_vertical_bottom_24"
                    android:paddingRight="30dp"
                    android:text="통계"
                    android:textSize="25dp"
                    android:background="@drawable/line_bold2"
                    android:fontFamily="@font/cafe24dongdong"/>

                <Button
                    android:id="@+id/btn_background"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:drawableRight="@drawable/ic_baseline_settings_24"
                    android:paddingRight="30dp"
                    android:text="배경색 변경"
                    android:textSize="25dp"
                    android:background="@drawable/line_bold2"
                    android:fontFamily="@font/cafe24dongdong"/>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/white"
        android:theme="@style/Widget.BottomNavigationView"
        app:itemIconTint="@drawable/bottom_icon_color"
        app:itemTextColor="@drawable/bottom_icon_color"
        app:menu="@menu/menu_under"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>